<% provide(:title, 'All students') %>
<h1>All students</h1>

<table>
  <% @students.each do |student| %>
    <tr>
      <td><%= link_to student.name, student_path(student) %></td>
      <td><%= button_to 'Edit', edit_student_path(student), method: 'get'%></td>
      <td><%= button_to 'Remove', student_path(student), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Student", new_student_path %>

