<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1"
                aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul class="nav navbar-nav navbar-right collapse navbar-collapse"
          id="bs-example-navbar-collapse-1">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if student_logged_in? %>
          <li><%= link_to "Students", students_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_student %></li>
              <li><%= link_to "Settings", edit_student_path(current_student) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", student_logout_path, method: :delete %>
              </li>
            </ul>
          
          <% elsif instructor_logged_in? %>
          <li><%= link_to "Instructors", instructors_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_instructor %></li>
              <li><%= link_to "Settings", edit_instructor_path(current_instructor) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", instructor_logout_path, method: :delete %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Student Log in", student_login_path %></li>
          <li><%= link_to "Instructor Log in", instructor_login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
