<% provide(:title, 'Edit Course') %>
<h1>Edit Course</h1>

<% if instructor_logged_in? %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @course, local: true) do |f| %>
    <%#= render 'shared/course_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.hidden_field :instructor_id, :value => current_instructor.id %>
      
      <%= f.submit "Create Course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
