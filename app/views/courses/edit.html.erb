<h1>Edit Course</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @course, local: true) do |f| %>
      

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: Course.find(params[:id]).name %>

      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
