<%# Form for making a new course as an admin user %>
<%= form_with(model: course, local: true) do |form| %>
<h1>New Class</h1>

  <div class="field">
    <%= form.label :Name, class: "hidden" %>
    <%= form.text_field :cname, placeholder: "Name" %>
    <%= form.hidden_field :user_id, :value => current_user.id  %>
  </div>

  <div class="actions">
    <%= form.submit "Create Class", :class => "btn btn-default" %>
  </div>
<% end %>
