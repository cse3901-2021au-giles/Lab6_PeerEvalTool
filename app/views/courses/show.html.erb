
 <%# shows the groups in one specific course %>
 <%# Also allows the instructor to create either a new project or a new group for their course %>
 <br><br><br>
<h2>Courses:</h2>
<% if @course.group_ids.length == 0 %>
	<h2>There are currently no groups in this class</h2>
<% end %>
	
<% for i in 0...@course.group_ids.length %>
	<h2>
		<%= link_to Group.find(@course.group_ids[i]).gname, memberships_path(:group_id => @course.group_ids[i]), id: "link"  %>
	</h2>
<% end %>

<br><%= link_to 'New Project', new_project_path(:course_id => @course.id), :class => "new" %>
<%= link_to 'New Group', new_group_path(:course_id => @course.id), :class => "new" %>
<br><%= link_to 'Go to Groups', groups_path, id: "link"%>
<%= link_to 'Go to Classes', courses_path, :class => "btn btn-default", id: "link" %>
