<h1><%= @course.name %></h1>
 
<h2>Groups:</h2>
<% if @course.team_ids.length == 0 %>
	<h2>There are currently no groups in this class</h2>
<% end %>

<table><tbody>
<% for i in 0...@course.team_ids.length %>
	
	<tr><td><h3><%= link_to Team.find(@course.team_ids[i]).name, students_teams_path(:team_id => @course.team_ids[i])  %>	</h3></td></tr>
<% end %>
</tbody></table>
<br><%= link_to 'New Group', new_team_path(:course_id => @course.id), :class => "new" %>
<br><%= link_to 'Go to Groups', teams_path %>
<br><%= link_to 'Go to Classes', courses_path, :class => "btn btn-default" %>
