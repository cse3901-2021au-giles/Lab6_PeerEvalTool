<% provide(:title, 'All Courses') %>
<h1>All Courses</h1>

<table class="table">
  <% @courses.each do |course| %>
    <tr>
      <td><%= link_to course.name, course_path(course) %></td>
      <td><%= button_to "Edit", edit_course_path(course), method: :get %></td>
      <td><%= button_to 'Remove', course, { :onclick =>  "return confirm('Are you sure?')", method: :delete } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add a New Course", new_course_path %>
