<h1>Edit profile</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @instructor, local: true) do |f| %>
      

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: Instructor.find(params[:id]).name %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: Instructor.find(params[:id]).email %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Show', @instructor %> |
<%= link_to 'Back', instructors_path %>
