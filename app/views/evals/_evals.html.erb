<li id="eval-<%= eval.id %>">
  <%= link_to gravatar_for(eval.user, size: 50), eval.user %>
  <span class="user"><%= link_to eval.user.name, eval.user %></span>
  <span class="comments"><%= eval.comments %></span>
  <span class="rating"><%= eval.rating %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(eval.created_at) %> ago.
  </span>
</li>